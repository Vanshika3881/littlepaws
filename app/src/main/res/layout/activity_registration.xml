<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rr"
    tools:context=".Registration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="28dp">


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            app:cardCornerRadius="60sp"
            android:alpha="0.7"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            app:cardBackgroundColor="#E8E0FF"
            tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="28dp">


            <TextView
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:fontFamily="sans-serif"
                android:text="Registration"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <View
            android:layout_width="wrap_content"
            android:layout_height="30dp" />


            <EditText
        android:id="@+id/button15"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="#574A00D4"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/phone_box"
        android:inputType="phone"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button15"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"

        android:background="#574A00D4"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="10dp"
        android:hint="Phone Number"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/address_box"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:background="#574A00D4"

        android:drawableLeft="@drawable/home"
        android:drawablePadding="10dp"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password_box"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="29dp"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:background="#574A00D4"
        android:drawableRight="@drawable/baseline_visibility_off_24"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="18sp" />


                <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="25sp"
        android:drawablePadding="10sp"
        android:padding="5sp"
        android:text="I agree with Terms and Conditions."
        android:textColor="#703D8B"
        android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="16dp"/> <!-- Adjust the radius for rounded corners -->


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:layout_below="@+id/checkBox"
                android:layout_gravity="center"
                android:layout_marginStart="130dp"

                android:layout_marginEnd="137dp"
                android:background="#83002ED4"
                android:enabled="false"
                android:onClick="onClick"
                android:text="SIGN UP"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28sp"
        tools:ignore="MissingConstraints">



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>


