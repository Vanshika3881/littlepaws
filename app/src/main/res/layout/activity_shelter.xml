<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".shelter">
    <TextView
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="5dp"
        android:text="NGO'S and Animal Shelter"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="30dp"
        android:layout_marginTop="90dp"
       android:textAlignment="center"
        android:textColor="@color/white"
        android:text="FOLLOW THE GIVEN INSTRUCTIONS:"/>

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="460dp"
        app:cardBackgroundColor="@color/teal_200"
        app:cardCornerRadius="40sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
      android:layout_marginTop="200sp">
        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:text="Step:1-Click on map to find your current location"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="129sp"
            android:text="Step:2-Click on bottom right of the screen on google maps icon , the page will redirect you to google maps "

           />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="259sp"
            android:text="Step:3-Search for near by NG0'S , Animal shelter and Vets  "

            />


        <Button
            android:id="@+id/ShowMap"
            android:layout_width="110dp"
            android:textSize="20sp"
            android:layout_height="80dp"
            android:text="MAP"
            android:textColor="@color/black"
          android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:layout_marginTop="158dp"
             />
    </androidx.cardview.widget.CardView>


</RelativeLayout>