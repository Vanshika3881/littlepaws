<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s1"
    tools:context=".login">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="550dp"
            android:layout_height="700dp"
            android:layout_marginTop="120dp"
            app:cardCornerRadius="100sp"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="#E2E0F2FF"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Welcome"
                    android:textColor="#14ADFF"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Please login with your information"
                    android:textColor="#FF1457"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />


                <EditText
                    android:id="@+id/button15"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#74DA70D6"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:drawablePadding="10dp"
                    android:hint="Email"
                    android:padding="20dp"
                    android:textColorHint="@android:color/white"
                    android:textSize="17sp" />

<!--                <EditText-->
<!--                    android:id="@+id/button16"-->
<!--                    android:layout_width="290dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:layout_marginStart="20dp"-->
<!--                    android:layout_marginEnd="20dp"-->
<!--                    android:layout_marginBottom="20dp"-->
<!--                    android:background="#74DA70D6"-->
<!--                    android:drawableLeft="@drawable/phone"-->
<!--                    android:drawablePadding="10dp"-->
<!--                    android:hint="Phone Number"-->
<!--                    android:inputType="number"-->
<!--                    android:padding="20dp"-->
<!--                    android:textColorHint="@android:color/white"-->
<!--                    android:textSize="17sp" />-->

                <EditText
                    android:id="@+id/password_box"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button15"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#74DA70D6"
                    android:drawableLeft="@drawable/baseline_password_24"
                    android:drawableRight="@drawable/baseline_visibility_off_24"
                    android:drawablePadding="10dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="20dp"
                    android:textColorHint="@android:color/white"
                    android:textSize="17sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/password_box"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="70dp"
                    android:layout_marginTop="20dp"
                    android:background="#AB556AD3"
                    android:enabled="false"
                    android:text="LOGIN"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/button5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="onClick"
                    android:text="New user? Click here to create account"
                    android:textColor="#1600E0"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="45dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="LITTLE PAWS"
            android:layout_gravity="center"
            android:textColor="@color/purple"
            android:textSize="42sp"
            android:textStyle="bold" />


    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28sp"
        tools:ignore="MissingConstraints">



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>